<%- model_class = Organization -%>
<% provide :title, [@organization.name, model_class.model_name.human].join(" ")  %>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div class="box box-primary">
  <div class="box-body">
    <%= image_tag @organization.logo_url.to_s %>
      <div class="row">
        <dl class="dl-horizontal">
          <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
          <dd><%= @organization.name %></dd>
          <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
          <dd><%= @organization.description %></dd>
          <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
          <dd><%= @organization.address %></dd>
          <dt><strong><%= model_class.human_attribute_name(:mission) %>:</strong></dt>
          <dd><%= @organization.mission %></dd>
          <dt><strong><%= model_class.human_attribute_name(:vision) %>:</strong></dt>
          <dd><%= @organization.vision %></dd>
          <dt><strong><%= model_class.human_attribute_name(:message) %>:</strong></dt>
          <dd><%= @organization.message %></dd>
          <dt><strong><%= model_class.human_attribute_name(:website) %>:</strong></dt>
          <dd><%= @organization.website %></dd>
        </dl>

      </div>

      <div id='map-container'>
        <div id="map"></div>
      </div>

    <div class="box-footer">
      <%= render 'shared/edit_button', path: edit_organization_path(@organization) %>
      <%= link_to t('.back', :default => t("helpers.links.back")),
                    root_path, :class => 'btn btn-default'  %>
    </div>
  </div>
</div>




<script type="text/javascript">
  $(document).ready(function () {
    var org_lat = <%= @organization.latitude or "null" %>;
    var org_lng = <%= @organization.longitude or "null" %>;

    setMapOn('map', org_lat, org_lng);
  });
</script>
