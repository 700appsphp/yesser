<% model_class = OrganizationUser %>
<% provide :title, t("helpers.titles.edit", name: @organization_user, 
   model: model_class.model_name.human.titleize) %>
<%= render 'shared/error_messages', object: @user %>
<div class="box box-danger">
  <%= form_for @user, url: update_password_organization_users_path do |f| %>
    <div class="box-body">
      <%= f.label :current_password, class: 'control-label' %>
      <%= f.password_field :current_password, class: 'form-control', required: :required %>
      <%= f.label :password, class: "control-label" %>
      <%= f.password_field :password, required: :required, 
          autocomplete: "off", class: 'form-control' %>
      <%= f.label :password_confirmation, class: "control-label" %>
      <%= f.password_field :password_confirmation, required: :required, class: 'form-control' %>
    </div>
    <div class="box-footer">
      <%=  f.submit class: 'btn btn-flat btn-primary' %> 
      <%= link_to t('helpers.links.cancel'), root_url, class: 'btn btn-flat btn-default' %>
    </div>
    <% end %>
  </div>
</div>