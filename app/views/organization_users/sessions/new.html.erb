<% provide(:title, t("helpers.sign_in")) %>
<div class="form-box" id="login-box">
  <div class="header">
    <%=t 'helpers.sign_in' %>
  </div>
  <% flash.each do |key, message| %>
    <div class="callout callout-danger callout-signin">
      <%= content_tag :div, message %>
    </div>
  <% end %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="body bg-gray">
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control",
            placeholder: t("organization_users.email") %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control',
            placeholder: t("organization_users.password") %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>  <%= f.label :remember_me, t('devise.sessions.remember_me') %>
        </div>
      <% end %>
    </div>
    <div class="footer">
      <%= f.submit t("helpers.sign_in"), class: "btn bg-olive btn-block" %>
      <p>
        <%= link_to t("organization_users.forgot_password"), 
            new_password_path(resource_name) %>
      </p>
    </div>
  <% end %>
</div>
