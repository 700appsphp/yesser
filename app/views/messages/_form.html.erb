<%= render 'shared/error_messages', object: @message %>

  <%= form_for(@message) do |f| %>
    <div class="box-body">
      <div class="form-group">
        <%= f.label :title, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :title, class: 'form-control', required: :required %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, class: 'control-label' %>
        <div class="contols">
          <%= f.text_area :description, class: 'form-control', required: :required %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :image, class: 'control-label' %>
        <div class="contols">
              <%= image_tag @message.image_url(:thumb).to_s, class: 'thumb' if @message.image? %>
          <%= f.file_field :image, class: 'file_field' %>
        </div>
      </div>
    </div>
    <div class="box-footer">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            :back, class: 'btn btn-default' %>
  </div>
  <% end %>


