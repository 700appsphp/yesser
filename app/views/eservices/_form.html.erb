<%= render 'shared/error_messages', object: @eservice %>
<%= form_for @eservice do |f| %>
  <%= f.hidden_field :category_id %>
  <%= f.hidden_field :owner_type %>
  <%= f.hidden_field :owner_id %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control', required: :required %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :logo, class: 'control-label' %>
    <div class="controls">
      <%= image_tag @eservice.logo_url(:thumb).to_s, class: 'thumb' if @eservice.logo? %>
      <%= f.file_field :logo, class: 'file_field' %>
    </div>
  </div>

  <div class="box-footer">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              :back, :class => 'btn btn-default' %>
  </div>
<% end %>
