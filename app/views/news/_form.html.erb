<%= render 'shared/error_messages', object: @news %>
<%= form_for @news, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :body, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :organization_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :organization_id, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            news_path, :class => 'btn btn-default' %>
 
<% end %>
